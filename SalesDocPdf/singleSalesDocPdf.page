<apex:page showHeader="false" standardStylesheets="false" renderAs="pdf"  standardcontroller="Sales_Document__c" extensions="singleSalesDocController">

 		<head>

    </head>
    <c:dynapdfcomponent type='header'>
        <table width="100%" >
            <col width="30%"/>
            <col width="40%"/>
            <col width="30%"/>
              <tr>
                 <td class='companyInfo'>
                     <ul style='list-style: none;'>
                          <li style="font-size:15px; font-weight: bolder;">Advanced Turf Solutions</li>
                          <li style="font-size:12px; font=weight: bold;">12955 Ford Drive</li>
                          <li style="font-size:12px; font=weight: bold;">Fishers, IN 46038</li>
                          <li style="font-size:12px; font=weight: bold;">Corp. Phone: (877)433-7037</li>
                         <!-- <li style="font-size:12px; font=weight: bold;">Rep Mobile: {!head[0].sales_rep__r.mobile__c}</li>
                          <li style="font-size:12px; font=weight: bold;">Rep Email: {!head[0].sales_rep__r.email__c}</li>-->
                  	   </ul>                      	
                  </td>
                  
                  <td style="text-align:center">
                     <apex:outputText rendered="{!head[0].doc_type__c == 'Invoice'}">
                         <h3>Invoice</h3>
    				 </apex:outputText>
                     <apex:outputText rendered="{!head[0].doc_type__c == 'Return'}">
    					<h3>Return</h3>
    				 </apex:outputText>
                  </td>
              	<td colspan='1'><apex:image style="width:80%;height:80%;" url="{!$Resource.ATSLogo}"/></td>

              </tr>
        </table>
        <hr/>
    </c:dynapdfcomponent>

    	<apex:outputText rendered="{!head[0].customer__r.S_Account__c == True}">
    		<h3>
                For S Accounts please contact Michelle Hancock or John Kavanaugh for a copy of an invoice. 
            </h3>
    	</apex:outputText>
<!--Replaced by credit rebill warning--> 
         <apex:outputText rendered="{!head[0].Replaced_by_Credit_Rebill__c == True}">
              <h5 style='background-color:red; color:white; text-align:Center;;'>
                 Warning Replaced by another Invoice: {!head[0].Replaced_by_Credit_Rebill_Num__c}
              </h5>
          </apex:outputText>
    		<apex:outputText rendered="{!head[0].customer__r.S_Account__c == False}">
    		    <div class='info' style="padding-top:-100px;">

 <!--This is the bill to ship section. Empty <td> ready for ship to info once we have it in SF--> 
                    <div class='billTo' style='margin-left: 5%; margin-bottom: 3%; margin-top:5%;'>
                        <table width='100%'>
                            <col width='40%'/>
                            <col width='60%'/>
                            	<tr class='billToShipTo' style='padding-bottom: 0px;'>
                                	<td style='text-align:center;'><b>BILL TO:</b></td>
                                    <!--<td><b>SHIP TO:</b></td>-->
                                </tr>
                            	<tr>
                            	 <td style='border-bottom: 1px solid;'>{!head[0].Billing_Company__c}</td>
                                 <td></td>
                            	</tr>
                            	<tr>
                                    <td>{!head[0].Billing_Company__c}</td>
                                    <td></td>
                            	</tr>
                            	<tr>
                                    <td>{!head[0].Billing_Street__c}</td>
                                    <td></td>
                            	</tr>
                            	<tr>
                            		<td>{!head[0].Billing_City__c}, {!head[0].Billing_State__c} {!head[0].Billing_Zip_Code__c}</td>
                                    <td></td>
                            	</tr>
                        </table>
                    </div>
                    
                	<!--
                    <apex:outputText rendered="{!head[0].Replaced_by_Credit_Rebill__c == False}">
    					<h5 style='background-color:yellow; text-align:Center;;'>
                      		Disclaimer: This is not a replacement of the original invoice.
                		</h5>
    				</apex:outputText>-->
<!--Invoice Info Bar-->                    
                    <div class='invoiceInfo'>
                        <table width='100%'>
                            <col width='16%'/><col width='16%'/><col width='16%'/>
                            <col width='16%'/><col width='16%'/><col width='16'/>
                            <tr class='topcellInvoiceInfo'>
                                <td style="background-color:#DCDCDC; text-align: center; border: .5px solid black;"><b>Invoice Date</b></td>
                                <td><b>Invoice #</b></td>
                                <td><b>Due Date</b></td>
                                <td><b>Ship Type</b></td>
                                <td><b>PO #</b></td>
                                <td><b>Customer #</b></td>
                            </tr>
                            <tr class='bottomcellInvoiceInfo'>
                            	<td>
                                    <apex:outputText value="{0,date,MM-dd-yyyy}">
                   			  			<apex:param value="{!head[0].doc_date__c}" />
                                    </apex:outputText>
                                </td>
                                <td>{!head[0].name}</td>
                                <td>
                                	<apex:outputText value="{0,date,MM-dd-yyyy}">
                        		 		<apex:param value="{!head[0].Due_Date__c}" />
                        		 	</apex:outputText>
                                </td>
                                <td>{!head[0].Ship_Type__c}</td>
                                <td>{!head[0].Cust_PO_Num__c}</td>
                                <td>{!head[0].Customer__r.Customer__c}</td>
                            </tr>
                        </table>
                    </div>
             
    </div> 
               
                        <table width='100%' style="border-collapse: collapse;border: 1px solid black;">
                            <col width='40%'/>
                            <col width='20%'/>
                            <col width='20%'/>
                            <col width='20%'/>
                            
                                    <tr>
                                      <th style="border: 1px solid black; text-align:center; background-color:#C8C8C8;">Descripton</th>
                                      <th style="border: 1px solid black; text-align:center; background-color:#C8C8C8;">Qty</th>
                                      <th style="border: 1px solid black; text-align:center; background-color:#C8C8C8;">Unit Price</th>
                                      <th style="border: 1px solid black; text-align:center; background-color:#C8C8C8;" >Total Price</th>
                                    </tr>	
                                  <apex:repeat value="{!detail}" var="p">
                                  <tr> 
                                    <td style="border: 1px solid black; text-align:center;">{!p.Product_Name__c}</td>
                                    <td style="border: 1px solid black; text-align:center;">{!p.Qty__c}</td>
                                    <td style="border: 1px solid black; text-align:center;">${!p.Unit_Price__c}</td> 
                                    <td style="border: 1px solid black; text-align:center;">${!p.Extended_Price__c}</td> 
                                 </tr>   
                                </apex:repeat>
 
                            <tr><td colspan='2'></td>
                                <td style="border: 1px solid black; text-align:center; background-color:#C8C8C8; padding-top: 10px;">Invoice Qty Total:</td>
                                <td style="text-align:center; border: 1px solid black;">{!q}</td></tr>
                            <tr><td colspan='2'></td>
                                <td style="border: 1px solid black; text-align:center; background-color:#C8C8C8;padding-top: 10px;">Freight:</td>
                                <td style="text-align:center; border: 1px solid black;"> ${!head[0].Freight_Amount__c}</td></tr>
                            <tr><td colspan='2'></td>
                                <td style="border: 1px solid black; text-align:center; background-color:#C8C8C8;padding-top: 10px;">Tax</td>
                                <td style="text-align:center; border: 1px solid black;"> ${!head[0].Tax_Amount__c}</td></tr>
                            <tr><td colspan='2'></td>
                                <td style="border: 1px solid black; text-align:center; background-color:#C8C8C8;padding-top: 10px;">Product Total:</td>
                                <td style="text-align:center; border: 1px solid black;"> ${!head[0].Line_Total__c}</td></tr>
                            <tr><td colspan='2'></td>
                                <td style="border: 1px solid black; text-align:center; background-color:#C8C8C8;padding-top: 10px;">Order Total:</td>
                                <td style="text-align:center; border: 1px solid black;"> ${!head[0].Doc_Amount__c}</td></tr>
                           </table>
    </apex:outputText>
<c:dynapdfcomponent type="footer">
        <hr/>
        <h6  style="font-size:8pt;word-break:break-all">
            15% RESTOCKING FEE ON ALL RETURNS. NO RETURNS ON PRE-EMERGENT, ICE MELT, AGENCY OR SPECIAL-ORDER PRODUCTS.
            PRODUCTS MUST BE NEW, CLEAN, UNOPENED IN ORIGINAL PACKAGING WITH LABEL, NOT DISCONTINUED, AND ABLE TO BE RESOLD.
            A RECEIPT OR INVOICE MUST BE PROVIDED AT THE TIME OF RETURN.
            A SERVICE CHARGE OF 1 1/2% PER MONTH, WHICH IS AN APR OF 18%, WILL BE ADDED TO ALL PAST DUE BALANCES
        </h6>
         
</c:dynapdfcomponent>

</apex:page>